<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#2de9d3"
    android:layout_height="match_parent"
    android:padding="10dp">
    <TextView
        android:padding="20dp"
        android:gravity="center"
        android:textColor="#f40606"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Sửa thông tin sách"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/txtBookNameUpdate"
        android:hint="Nhập tên sách"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/txtBookPageUpdate"
        android:inputType="number"
        android:hint="Nhập số trang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/txtBookPriceUpdate"
        android:hint="Nhập giá tiền"
        android:inputType="number"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/txtBookDescUpdate"
        android:hint="Nhập mô tả"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/imgAnhUpdate"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/imginsert"/>
    <LinearLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnUpdate"
            android:layout_weight="5"
            android:text="Cập nhật"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:paddingRight="1dp"
            android:paddingLeft="1dp"/>
        <Button
            android:id="@+id/btnHuy"
            android:layout_weight="5"
            android:text="Hủy"
            android:layout_width="wrap_content"
            android:paddingLeft="30dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
